.wrapper
  = render partial: 'products/header'
  .mypage_contents
    .left_box
      =render "users/modules/show_left_content"
    .right_box
      .right_content
        .card__head
          支払い方法
        .card__index-add
          .card__index-add--head
            クレジットカード一覧
            %ul{class:"card__index-add--list"}
              //ここにカードの一覧が入るようにする
          .card__index-add--box
            =link_to destroy_user_session_path, method: :delete, class:"card-reggister-link" do
              %i{class:"far fa-credit-card"}
              ="クレジットカードを追加する"
        .card__info
          =link_to "#", class:"card__info--link" do
            支払い方法について
            %i{class:"fas fa-chevron-right"}
          = form_with action: :pay, method: :post do
            %script{type:"text/javascript",
                    src:"https://checkout.pay.jp/",
                    class:"payjp-button",
                    data:{key:"pk_test_0383a1b8f91e8a6e3ea0e2a9",
                          submit:{text:"トークンを作成する"},
                          partial:"true"}}