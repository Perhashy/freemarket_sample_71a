.wrapper
  = render partial: 'products/header'
  .mypage_contents
    .left_box
      =render "users/modules/show_left_content"
    .right_box
      .right_content
        .card__head
          支払い方法
        .card__index-add
          .card__index-add--head
            %h3 クレジットカード一覧
            %ul{class:"card__index-add--list"}
              - if @card.present?
                .container
                  .creditcard-info
                    -# = image_tag "creditcards/#{@card_image}",width:'34',height:'20', alt:'master-card'
                    %p.creditcard-info__number
                      = "**** **** **** " + @card_info.last4
                    %p.creditcard-info__period 
                    = @exp_month + " / " + @exp_year
                  = button_to "削除する", card_path(@card), method: :delete, class:"creditcard-info__delete"
              - else
                .card__index-add--box
                  =link_to new_card_path, class:"card-reggister-link" do
                    %i{class:"far fa-credit-card"}
                    ="クレジットカードを追加する"
        .card__info
          =link_to "#", class:"card__info--link" do
            支払い方法について
            %i{class:"fas fa-chevron-right"}
            