          = f.label :ユーザー氏名
          %br/
          = f.text_field :password_confirmation, autocomplete: "user-name"
        .field
          = f.label :生年月日
          %br/
          = f.date_field :password_confirmation, autocomplete: "user-name"

      
      .send-imfomation
        %h1商品送信機能
        .field
          = f.label :送付先の氏名
