.singup
  .signin-header
    %a{href: root_path}
      =image_tag "logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23.svg"
  .singup-form
    -# 以下保存先カラム名は仮置きです。
    = form_with model: @user, url: user_registration_path, local: true do |f|
      = render "devise/shared/error_messages", resource: resource
      .singup-form-box
        %h1.singup-form-box__title ユーザー新規登録
        .field
          = f.label :ニックネーム, class: "field__text"
          = f.text_field :nixkname, autofocus: true, autocomplete: "nickname", class: "field__input", placeholder: "ニックネーム" 
        .field
          = f.label :Eメール, class: "field__text"
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "field__input", placeholder: "e-mail"
        .field
          = f.label :パスワード, class: "field__text"
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          = f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "field__input"
        .field
          = f.label :パスワード（確認用）, class: "field__text"
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード", class: "field__input"  


      .singup-form-box
        %h1.singup-form-box__title 本人確認情報
        .field
          = f.label :ユーザー（氏名）, class: "field__text"
          .field-box
            = f.text_field :last_name, placeholder: "指定あり", autocomplete: "user-name", class: "field-box__input"
            = f.text_field :first_name, placeholder: "指定あり", autocomplete: "user-name", class: "field-box__input"
        .field
          = f.label :ユーザー（しめい）, class: "field__text"
          .field-box
            = f.text_field :last_name_kana, placeholder: "指定あり",autocomplete: "user-name", class: "field-box__input"
            = f.text_field :first_name_kana, placeholder: "指定あり", autocomplete: "user-name", class: "field-box__input"
        .field
          = f.label :生年月日, class: "field__text"
          = f.date_field :birthday, autocomplete: "user-name", class: "field__input"

    -# 以下保存先モデル名、カラム名は仮置きです。
    = form_with model: @user, url: user_registration_path, local: true do |f|
      .singup-form-box
        %h1.singup-form-box__title 商品送信機能
        .field
          = f.label :送付先（氏名）, class: "field__text"
          .field-box
            = f.text_field :last_name, placeholder: "指定あり", autocomplete: "user-name", class: "field-box__input"
            = f.text_field :first_name, placeholder: "指定あり", autocomplete: "user-name", class: "field-box__input"
        .field
          = f.label :送付先（しめい）, class: "field__text"
          .field-box
            = f.text_field :last_name_kana, placeholder: "指定あり", autocomplete: "user-name", class: "field-box__input"
            = f.text_field :first_name_kana, placeholder: "指定あり", autocomplete: "user-name", class: "field-box__input"
        .field
          = f.label :郵便番号, class: "field__text"
          = f.number_field :zip_code, placeholder: "指定あり", autocomplete: "user-name", class: "field__input"
        .field
          = f.label :都道府県, class: "field__text"
          = f.text_field :prefecture_id, placeholder: "指定あり", autocomplete: "user-name", class: "field__input"
        .field
          = f.label :市区町村, class: "field__text"
          = f.text_field :city, placeholder: "指定あり", autocomplete: "user-name", class: "field__input"
        .field
          = f.label :番地, class: "field__text"
          = f.text_field :address, placeholder: "番地", autocomplete: "user-name", class: "field__input"
        .field
          = f.label :マンション名, class: "field__text"
          = f.text_field :building, placeholder: "マンション名", autocomplete: "user-name", class: "field__input"
        .field
          = f.label :お届け先の電話番号, class: "field__text"
          -# カラムの場所を変更可能性あり
          = f.text_field :phone_number, placeholder: "電話番号", autocomplete: "user-name", class: "field__input"


      .actions
        = f.submit "Sign up"
  = render "devise/shared/links"

  = render "devise/shared/footer"
