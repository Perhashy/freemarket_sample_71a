.singup
  %a{href: 'http://furima.tokyo/assets/logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23.svg'}
  .singup-form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      
      .user-register
        %h1ユーザー新規登録
        .field
          = f.label :nickname
          %br/
          = f.text_field :email, autofocus: true, autocomplete: "nickname"
        .field
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email"
        .field
          = f.label :password
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "new-password"
        .field
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password"  
      
      .user-ditail
        %h1本人確認情報
        .field
          = f.label :ユーザー氏名
          %br/
          = f.text_field :password_confirmation, autocomplete: "user-name"
        .field
          = f.label :ユーザー氏名
          %br/
          = f.text_field :password_confirmation, autocomplete: "user-name"
