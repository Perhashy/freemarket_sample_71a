.signin
  .signin-header
    %a{href: root_path}
      =image_tag "logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23.svg"
  .signin-form
    = form_with model: @user, url: user_registration_path, local: true do |f|
      .field
        = f.label :メールアドレス, class: "field__text"
        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "field__input"
      .field
        = f.label :パスワード, class: "field__text"
        = f.password_field :password, autocomplete: "current-password", placeholder:"パスワード", class: "field__input"
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          = f.label :ログイン状態を保存する
      = f.submit "ログイン", class: "actions"
    = render "devise/shared/links"
  .signin-footer
    .signin-footer-box
      .clearfix
        = link_to "プライバシーポリシー", "#"
        = link_to "FURIMA利用規約"
        = link_to "ポイントに関する特約"
      %a{href: root_path, class:"footer-image"}
        =image_tag "logo-white-f61961ed5170064c5f33dd4524bdceeb5a5df2c83eb76fba31143f63fbab2c5e.svg"
      %p{class: "footer-text"}©︎FURAMA
